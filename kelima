        Notify("Activated", string.format("+%s per train!", FormatNumber(180 * Settings.Multiplier)))
    else
        enableBtn.BackgroundColor3 = Color3.fromRGB(150, 50, 200)
        enableBtn.Text = "ğŸš€ ACTIVATE"
        enableStroke.Color = Color3.fromRGB(200, 100, 255)
        statusText.Text = "â­• INACTIVE"
        statusText.TextColor3 = Color3.fromRGB(255, 150, 150)
        Notify("Deactivated", "Script stopped")
    end
end)

autoBtn.MouseButton1Click:Connect(function()
    Settings.AutoTrain = not Settings.AutoTrain
    
    if Settings.AutoTrain then
        autoBtn.BackgroundColor3 = Color3.fromRGB(100, 200, 255)
        autoBtn.TextColor3 = Color3.new(1, 1, 1)
        autoBtn.Text = "ğŸ¤– AUTO TRAIN: ON"
    else
        autoBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
        autoBtn.TextColor3 = Color3.fromRGB(200, 200, 220)
        autoBtn.Text = "ğŸ¤– AUTO TRAIN: OFF"
    end
end)

-- CORE HOOKING SYSTEM - IMPROVED
local oldnc
oldnc = hookmetamethod(game, "__namecall", function(self, ...)
    local method = getnamecallmethod()
    local args = {...}
    
    -- Hook FireServer for training tracking
    if method == "FireServer" and Settings.Enabled then
        if tostring(self):find("TrainSpeed") then
            task.spawn(function()
                Stats.Sessions = Stats.Sessions + 1
                UpdateUI()
            end)
        end
    end
    
    -- Hook InvokeServer dengan penanganan yang lebih baik
    if method == "InvokeServer" and Settings.Enabled then
        local results = {oldnc(self, ...)}
        
        -- Process hasil di thread terpisah
        task.spawn(function()
            for i = 1, #results do
                if type(results[i]) == "number" and results[i] > 10 and results[i] < 1000000 then
                    local orig = results[i]
                    results[i] = results[i] * Settings.Multiplier
                    Stats.TotalGains = Stats.TotalGains + (results[i] - orig)
                    UpdateUI()
                end
            end
        end)
        
        return unpack(results)
    end
    
    return oldnc(self, ...)
end)

-- Hook BindableFunction dengan penanganan yang lebih aman
task.spawn(function()
    task.wait(2)
    
    for _, v in pairs(ReplicatedStorage:GetDescendants()) do
        if v:IsA("BindableFunction") and v.Name:find("GetTrainValue") then
            pcall(function()
                local oldFunc = v.OnInvoke
                v.OnInvoke = function(...)
                    local result = oldFunc(...)
                    
                    if Settings.Enabled and type(result) == "number" and result > 10 and result < 1000000 then
                        local boosted = result * Settings.Multiplier
                        task.spawn(function()
                            Stats.TotalGains = Stats.TotalGains + (boosted - result)
                            UpdateUI()
                        end)
                        return boosted
                    end
                    
                    return result
                end
            end)
        end
    end
end)

-- Auto Train Loop
task.spawn(function()
    while task.wait(0.3) do
        if Settings.Enabled and Settings.AutoTrain then
            pcall(function()
                local applyTrain = ReplicatedStorage:FindFirstChild("TrainEquipment")
                    and ReplicatedStorage.TrainEquipment:FindFirstChild("Remote")
                    and ReplicatedStorage.TrainEquipment.Remote:FindFirstChild("ApplyStationaryTrain")
                
                if applyTrain then
                    applyTrain:InvokeServer()
                end
            end)
        end
    end
end)

-- Initialize
UpdateUI()
Notify("Loaded!", "Set preset and activate!")


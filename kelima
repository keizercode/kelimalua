-- Queue untuk update UI yang aman
local updateQueue = {}

-- Update UI function - THREAD SAFE
local function UpdateUI()
    table.insert(updateQueue, {
        multTitle = string.format("âš¡ MULTIPLIER: x%s", FormatNumber(Settings.Multiplier)),
        sliderValue = string.format("x%s", FormatNumber(Settings.Multiplier)),
        gainText = string.format("ğŸ’ +180 â†’ +%s per train", FormatNumber(180 * Settings.Multiplier)),
        sliderFill = math.clamp(math.log(Settings.Multiplier) / math.log(1000000), 0, 1),
        statsText = string.format("ğŸ¯ Sessions: %d | Boosted: +%s", Stats.Sessions, FormatNumber(Stats.TotalGains))
    })
end

-- Process UI updates on RenderStepped (main thread)
RunService.RenderStepped:Connect(function()
    if #updateQueue > 0 then
        local update = updateQueue[#updateQueue]
        updateQueue = {}
        
        pcall(function()
            multTitle.Text = update.multTitle
            sliderValue.Text = update.sliderValue
            gainText.Text = update.gainText
            sliderFill.Size = UDim2.new(update.sliderFill, 0, 1, 0)
            statsText.Text = update.statsText
        end)
    end
end)

-- Slider logic
local dragging = false

sliderBtn.MouseButton1Down:Connect(function()
    dragging = true
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local mousePos = UserInputService:GetMouseLocation().X
        local sliderPos = slider.AbsolutePosition.X
        local sliderSize = slider.AbsoluteSize.X
        
        local percent = math.clamp((mousePos - sliderPos) / sliderSize, 0, 1)
        Settings.Multiplier = math.floor(1000 * math.pow(1000, percent))
        
        UpdateUI()
    end
end)

-- Button connections
minBtn.MouseButton1Click:Connect(function()
    main.Visible = false
    minimized.Visible = true
end)

restoreBtn.MouseButton1Click:Connect(function()
    main.Visible = true
    minimized.Visible = false
end)

